<!DOCTYPE html>
<html>
    <head>
        <style>
            body{
                margin: 0;
                padding: 0;
                background: url(https://blog.buildingconnected.com/wp-content/uploads/2018/08/DarkBluePattern_background-600x403.png);
                background-repeat: no-repeat;
                background-size: cover;
            }
            table {
                border-collapse: solid border 1px;
                width: 100%;
            }
            th{
                color:#fff;
                font-size:20px;
            }
            th, td {
                text-align: center;
                padding: 8px;
            }
            td{
                height:30px;
                color:#fff;
                text-align:center;
            }
            h2{
                margin: 30;
                padding: 0 0 20px;
                text-align: center;
                font-size: 40px;
                top: 95%;
                color: #fff;
            }

            tr:nth-child(even) {background-color: #ff4d4d;}
        </style>
    </head>
    <body>
        <h2>Leaderboard</h2>
        <div style="overflow-x:auto;">
            <table>
                <tr>
                    <th>Rank</th>
                    <th>User ID</th>
                    <th>UserName</th>
                    <th>Points</th>
                </tr>
                <%for(var i=0;i<userr.length;i++){ %>
                <tr>
                    <td><%=i+1%></td>
                    <td><%=userr[i].uid%></td>
                    <td><%=userr[i].uname%></td>
                    <td><%=userr[i].total_score%></td>
                </tr>
                <%}%>
            </table>
        </div>
        <a href="/homepage/<%=u%>"><button>Back</button></a>
    </body>
</html>
